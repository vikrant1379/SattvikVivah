modules = [ "web", "nodejs-18"]
run = "npm run dev"

[nix]
channel = "stable-25_05"
packages = ["psmisc"]

[deployment]
run = ["sh", "-c", "npm run dev"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Start Server Direct"

[[workflows.workflow]]
name = "Code Quality Check"
author = 46188764
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run type-check"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint:check"

[[workflows.workflow]]
name = "Code Quality Check"
author = 46188764
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run type-check"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run lint:check"

[[workflows.workflow]]
name = "Run Development Server"
author = 46257489
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[workflows.workflow]]
name = "Start Server Direct"
author = 46520191
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "fuser -k 5000/tcp 2>/dev/null || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "NODE_ENV=development tsx server/index.ts"
